<style>


.contenedor{
    position: relative;
    font-family: 'Poppins';font-size: 22px;
    
}
.contenedor .cartas{
    position: relative;
    width: 320px;
    height: 450px;
    background: #232323;
    border-radius: 20px;
    overflow: hidden;
}

.contenedor .cartas:before{
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #9bdc28;
    clip-path: circle(150px at 80% 20%);
    transition: 0.5s ease-in-out;
}

.contenedor .cartas:hover:before{
    clip-path: circle(300px at 80% -20%);
}

.contenedor .cartas:after{
    content: 'Nike';
    position: absolute;
    top: 30%;
    left: -20%;
    font-size: 12em;
    font-weight: 800;
    font-style: italic;
    color: rgba(255,255,255,0.04);
}

.contenedor .cartas .imgBx{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1000;
    width: 100%;
    height: 220px;
    transition: 0.5s;
}

.contenedor .cartas:hover .imgBx{
    top: 0%;
    transform: translateY(0%);
}

.contenedor .cartas .imgBx img{
    position: absolute;
    top: 10%;
    left: 20%;
    transform: translate(-15%, -15%) rotate(-25deg);
    width: 270px;
}

.contenedor .cartas .contenidoBx{
    font-family: 'Poppins';font-size: 22px;
    position: absolute;
    bottom: 0px;
    width: 100%;
    height: 100px;
    text-align: center;
    transition: 1s;
    z-index: 10;
   
}

.contenedor .cartas:hover .contenidoBx{
    height: 210px;
}

.contenedor .cartas .contenidoBx h2{
    position: relative;
    font-weight: 600;
    letter-spacing: 1px;
    color: #fff;
}
.contenedor .cartas .contenidoBx .size,
.contenedor .cartas .contenidoBx .color{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 8px 20px;
    transition: 0.5s;
    opacity: 0;
    visibility: hidden;
}

.contenedor .cartas .contenidoBx .size h3,
.contenedor .cartas .contenidoBx .color h3{
    color: #fff;
    font-weight: 300;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-right: 10px;
}

.contenedor .cartas .contenidoBx .size span{
   
    width: 26px;
    height: 26px;
    text-align: center;
    line-height: 26px;
    font-size: 14px;
    display: inline-block;
    color: #111;
    background: #fff;
    margin: 0 5px;
    transition: 0.5s;
    color: #111;
    border-radius: 4px;
    cursor: pointer;
}
.contenedor .cartas:hover .contenidoBx .size{
    opacity: 1;
   visibility: visible;
   transition-delay: 0,5;
}

.contenedor .cartas:hover .contenidoBx .color{
    opacity: 1;
   visibility: visible;
   transition-delay: 0,5;
}


.contenedor .cartas .contenidoBx .size span:hover{
   background: #9bdc28;
}

.contenedor .cartas .contenidoBx .color span{
    width: 20px;
    height: 20px;
    background: #ff0;
    border-radius: 50%;
    margin: 0 5px;
    cursor: pointer;
}

.contenedor .cartas .contenidoBx .color span:nth-child(2){
    background: #9bdc28;
}
.contenedor .cartas .contenidoBx .color span:nth-child(3){
    background: red;
}
.contenedor .cartas .contenidoBx .color span:nth-child(4){
    background: blue;
}

.contenedor .cartas .contenidoBx a{
    display: inline-block;
    padding: 10px 20px;
    background: #fff;
    border-radius: 4px;
    margin-top: 10px;
    text-decoration: none;
    font-weight: 600;
    color: #111;
    opacity: 0;
    transform: translateY(50px);
    transition: 0,5s;
}
.contenedor .cartas:hover .contenidoBx a{
    opacity: 1;
    transform: translateY(0px);
    transition-delay: 0,5s;
}
